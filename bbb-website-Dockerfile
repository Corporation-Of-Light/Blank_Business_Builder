# Dockerfile for Better Business Builder Website
# Lightweight nginx-based static site serving

# Stage 1: Base image with nginx
FROM nginx:alpine

# Metadata
LABEL maintainer="Corporation of Light <info@corporationoflight.com>"
LABEL description="Better Business Builder - Client Portal Website"
LABEL version="1.0.0"

# Remove default nginx config
RUN rm -rf /etc/nginx/conf.d/*

# Copy nginx configuration
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Copy website files
COPY index.html /usr/share/nginx/html/
COPY assets/ /usr/share/nginx/html/assets/
COPY docs/ /usr/share/nginx/html/docs/

# Create assets directory if it doesn't exist
RUN mkdir -p /usr/share/nginx/html/assets/{css,js,images}

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD wget --quiet --tries=1 --spider http://localhost/ || exit 1

# Expose port
EXPOSE 80

# Start nginx
CMD ["nginx", "-g", "daemon off;"]
