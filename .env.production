# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=info

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Application
APP_NAME="Better Business Builder"
APP_VERSION="1.0.0"
TIMEZONE=UTC

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# PostgreSQL
DATABASE_URL=postgresql://bbb_user:secure_password_here@postgres:5432/bbb_production
DATABASE_ECHO=false
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_PRE_PING=true

# ============================================================================
# CACHE CONFIGURATION (Redis)
# ============================================================================
REDIS_URL=redis://redis:6379/0
CACHE_TTL=3600

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
# JWT/Authentication
SECRET_KEY=your-super-secret-key-change-this-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET","POST","PUT","DELETE","OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW_SECONDS=3600

# ============================================================================
# PAYMENT PROCESSING (Stripe)
# ============================================================================
STRIPE_PUBLIC_KEY=pk_live_your_key_here
STRIPE_SECRET_KEY=sk_live_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME="Better Business Builder"

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================
# AWS (Optional - for S3, SES, etc.)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Twilio (for SIP services)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# SendGrid (Alternative email)
SENDGRID_API_KEY=

# ============================================================================
# MONITORING & LOGGING
# ============================================================================
# Sentry (Error tracking)
SENTRY_DSN=

# Datadog (Monitoring)
DD_API_KEY=

# Prometheus Metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Structured Logging
LOG_FORMAT=json
LOG_OUTPUT=file
LOG_FILE=/var/log/bbb/app.log
LOG_MAX_SIZE=100M
LOG_RETENTION_DAYS=30

# ============================================================================
# CELERY CONFIGURATION (Background Tasks)
# ============================================================================
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=["json"]
CELERY_TIMEZONE=UTC

# ============================================================================
# FEATURE FLAGS
# ============================================================================
FEATURE_QUANTUM_OPTIMIZATION=true
FEATURE_MARKETING_AUTOMATION=true
FEATURE_SIP_SERVICES=true
FEATURE_PREMIUM_WORKFLOWS=true
FEATURE_ANALYTICS=true

# ============================================================================
# BUSINESS LOGIC
# ============================================================================
# Licensing
LICENSE_CHECK_ENABLED=true
LICENSE_CACHE_TTL=3600

# Trial Settings
TRIAL_DAYS=14
TRIAL_FEATURES_ENABLED=true

# Free Tier Limits
FREE_TIER_API_CALLS_PER_DAY=100
FREE_TIER_STORAGE_MB=100

# ============================================================================
# BACKUP & DISASTER RECOVERY
# ============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # 2 AM daily
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/backups

# ============================================================================
# HEALTH CHECK
# ============================================================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PORT=8001
HEALTH_CHECK_PATH=/health

# ============================================================================
# TLS/SSL CONFIGURATION
# ============================================================================
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/server.crt
SSL_KEY_PATH=/etc/ssl/private/server.key

# ============================================================================
# DEPLOYMENT METADATA
# ============================================================================
DEPLOYMENT_ENVIRONMENT=production
DEPLOYMENT_REGION=us-east-1
DEPLOYMENT_VERSION=1.0.0
DEPLOYMENT_TIMESTAMP=2025-10-23
